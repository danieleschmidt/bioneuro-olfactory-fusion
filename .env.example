# BioNeuro-Olfactory-Fusion Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment (development, testing, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Project root directory (auto-detected if not set)
PROJECT_ROOT=

# =============================================================================
# NEUROMORPHIC HARDWARE CONFIGURATION
# =============================================================================

# Intel Loihi configuration
LOIHI_ENABLED=false
LOIHI_HOST=localhost
LOIHI_PORT=5000
NXSDK_PATH=/opt/nxsdk

# SpiNNaker configuration
SPINNAKER_ENABLED=false
SPINNAKER_HOST=192.168.1.1
SPINNAKER_VERSION=1.0.0
SPYNNAKER_CONFIG_PATH=/usr/local/lib/python3.11/site-packages/spynnaker

# BrainScaleS configuration
BRAINSCALES_ENABLED=false
BRAINSCALES_WAFER=33
BRAINSCALES_SETUP_ID=0

# =============================================================================
# SENSOR HARDWARE CONFIGURATION
# =============================================================================

# E-nose sensor array
ENOSE_ENABLED=true
ENOSE_DEVICE_PATH=/dev/ttyUSB0
ENOSE_BAUD_RATE=115200
ENOSE_SAMPLING_RATE=1.0

# Audio sensor configuration
AUDIO_ENABLED=true
AUDIO_DEVICE_INDEX=0
AUDIO_SAMPLE_RATE=44100
AUDIO_BUFFER_SIZE=1024

# Environmental sensors
TEMP_SENSOR_ENABLED=true
HUMIDITY_SENSOR_ENABLED=true

# =============================================================================
# SIMULATION CONFIGURATION
# =============================================================================

# Default simulation parameters
DEFAULT_SIMULATION_DURATION=1000  # milliseconds
DEFAULT_TIME_STEP=1.0             # milliseconds
DEFAULT_SPIKE_ENCODING=rate

# Neuron model parameters
DEFAULT_TAU_MEMBRANE=20.0         # milliseconds
DEFAULT_SPIKE_THRESHOLD=1.0       # voltage units
DEFAULT_REFRACTORY_PERIOD=2       # time steps

# Network architecture defaults
DEFAULT_NUM_PROJECTION_NEURONS=1000
DEFAULT_NUM_KENYON_CELLS=5000
DEFAULT_SPARSITY_LEVEL=0.05

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite, postgresql, mongodb)
DATABASE_TYPE=sqlite

# SQLite configuration
SQLITE_PATH=data/bioneuro.db

# PostgreSQL configuration (if used)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bioneuro_olfactory
POSTGRES_USER=bioneuro_user
POSTGRES_PASSWORD=your_secure_password

# MongoDB configuration (if used)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=bioneuro_olfactory
MONGODB_USER=bioneuro_user
MONGODB_PASSWORD=your_secure_password

# =============================================================================
# EXPERIMENT TRACKING
# =============================================================================

# MLflow tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=bioneuro-olfactory-fusion

# Weights & Biases (optional)
WANDB_PROJECT=bioneuro-olfactory-fusion
WANDB_ENTITY=your_wandb_username
WANDB_API_KEY=your_wandb_api_key

# TensorBoard logging
TENSORBOARD_LOG_DIR=logs/tensorboard

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Model serving
MODEL_CACHE_DIR=models/cache
MODEL_CHECKPOINT_DIR=models/checkpoints

# Alert system
ALERT_WEBHOOK_URL=
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=alerts@your-domain.com
ALERT_EMAIL_TO=safety@your-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API authentication
API_SECRET_KEY=your_very_secure_secret_key_change_this
JWT_EXPIRATION_HOURS=24

# Encryption keys for sensitive data
DATA_ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Testing configuration
TEST_DATABASE_PATH=data/test_bioneuro.db
PYTEST_PARALLEL_WORKERS=auto

# Code quality
BLACK_LINE_LENGTH=88
MYPY_STRICT_MODE=true

# Jupyter configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana dashboard
GRAFANA_ENABLED=false
GRAFANA_PORT=3000

# Health check configuration
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=5    # seconds

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Parallel processing
MAX_WORKERS=4
BATCH_SIZE=32
PREFETCH_FACTOR=2

# Memory management
MAX_MEMORY_USAGE_GB=8
GARBAGE_COLLECTION_THRESHOLD=0.8

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# GitHub integration (for automated updates)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=username/bioneuro-olfactory-fusion

# Cloud storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=bioneuro-data

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable experimental features (use with caution)
ENABLE_QUANTUM_INTEGRATION=false
ENABLE_DISTRIBUTED_TRAINING=false
ENABLE_EDGE_OPTIMIZATION=true

# Debug features
ENABLE_DETAILED_LOGGING=false
ENABLE_PROFILING=false
SAVE_INTERMEDIATE_RESULTS=false